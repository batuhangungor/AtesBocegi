@model AboutUsViewModel
@{ ViewData["title"] = "Hakkımızda";}
@Html.Partial("_smallslider")


<div class="col xl-1-1 " style="height:500px">
    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box">
        <div class="col xl-1-3">
            <div class="article-box" style="width:310px; height:90%; background:linear-gradient(rgb(135, 178, 0), rgb(139, 182, 0));">
                <div class="article-box article-box-title" style="height: 63px;  background: rgb(196, 209, 3);">
                    <div class="article-title-text" style="margin-top:15px;">

                        <span><b>@Model.AboutUs.LeftTitle</b></span>
                    </div>
                </div>
                <div class="article-box-text" style=" margin-bottom:10px; margin-right:20px">

                    <span style="font-size:13px;color:#fdda4c;">@Model.AboutUs.LeftContent</span>
                </div>
            </div>
        </div>
        <div class="col xl-2-3">
            <div class="article-box" style="width:640px;  height:90%;  background:rgb(12, 150, 177);">
                <div class="article-box article-box-title" style="height: 63px; background: rgb(11, 172, 203);">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>@Model.AboutUs.RightTitle</b></span>
                    </div>
                </div>
                <div class="wrap">
                    <div class="col xl-1-2">
                        <img style="float:left; margin-top:15px; margin-left:30px; padding-right:10px;" src="@Model.AboutUs.Image">
                    </div>
                    <div class="col xl-1-2" style=" margin-left:-25px">
                        <div style="margin-top:15px;">
                            <span style="font-size:17px;color:#ffffff; display:inline-block; padding-bottom: 10px;">
                                <img src="~/Site/img/list-mark.png">
                                Misyonumuz
                            </span>
                            <br>
                            <span style="font-size:13px;color:#FFFFFF;">@Model.AboutUs.Mission</span>
                        </div>
                        <div style="margin-top:15px; margin-bottom:15px;">
                            <span style="font-size:17px;color:#ffffff; display:inline-block; padding-bottom: 10px;">
                                <img src="~/Site/img/list-mark.png">
                                Vizyonumuz
                            </span>
                            <br>
                            <span style="font-size:13px;color:#FFFFFF;">@Model.AboutUs.Vision</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col xl-1-1 ">
    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box">
        @foreach (var article in Model.Articles)
        {
            <div class="col xl-1-3">
                <div class="article-box" style="height: 417px; width:310px; background:@article.Color.MainColor">
                    <div class="article-box article-box-title" style="height: 63px;  background: @article.Color.SecondColor">
                        <div class="article-title-text">
                            <span><b>@article.Title</b></span>
                        </div>
                    </div>
                    <img class="article-box-image" align="middle" src="@article.Image" width="247" height="131" />
                    <div class="article-box-text" style="height:130px;">
                        <span style="font-family:'allemademo';font-size:17px;color:#ffffff; display:inline-block; padding-bottom: 10px;">@article.SubTitle</span>
                        <br>
                        <span style="font-family:'Arial';font-size:15px;color:@article.Color.TextColor;">@Html.Raw(article.Detail)</span>
                    </div>
                    @if (article.LongDetail != null)
                    {
                        <div style="margin-right:20px; float:right;">
                            <a asp-action="detail" asp-controller="aboutus" asp-route-id="@article.Id" style="cursor:pointer"><img src="~/Site/img/detailbutton.png"></a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

