@model IEnumerable<FAQ>
@{ ViewData["title"] = "Sıkça Sorulan Sorular";}

@Html.Partial("_smallSlider")

<div class="col xl-1-1 ">
    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box">
        <div class="col xl-2-3">
            <div class="article-box" style=" width:640px; background:linear-gradient(rgb(135, 178, 0), rgb(139, 182, 0));">
                <div class="article-box article-box-title" style="height: 63px;  background: rgb(196, 209, 3);">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Sıkça sorulan sorular</b></span>
                    </div>
                </div>
                <div class="faq-box-text">
                    <span style="font-family:'Arial';font-size:14px;color:#fdda4c;">Velilerimiz tarafından sıkça sorulan soruları sayfamızda bulabilirsiniz.</span>
                </div>
                @{ int i = 0; }

                @foreach (var faq in Model)
                {
                    <div class="faq-question-panel">
                        <div class="sperator-dash"></div>
                        <div class="faq-question question">
                            <a class="faq-question-link">@{i++; @i}. @faq.Question</a>
                        </div>
                        <div class="faq-question answer">
                            <p>@faq.Answer</p>
                        </div>
                    </div>
                }

                <br>

            </div>
        </div>

        <div class="col xl-1-3">
            <div class="article-box" style="width:310px; background:rgb(12, 150, 177);">
                <div class="article-box article-box-title" style="height: 63px; background: rgb(11, 172, 203);">

                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Sorunuz mu var?</b></span>
                    </div>
                </div>
                <div class="wrap xl-outside-4 top_margin_15">
                    <div class="col xl-1-3">
                    </div>
                    <div class="col xl-2-3">
                        <div class="article-box">
                            <img align="right" src="~/Site/img/quest_bg.png" style="margin-right:20px">
                        </div>
                    </div>


                    <div class="col xl-1-1">
