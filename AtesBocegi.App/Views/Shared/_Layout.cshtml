    <script>
        var interval;
        var toplamLi;
        $(function () {
            var slidervar = false;
            if ($(".sliderbg") != null) {
                slidervar = true;
                $.ajax({
                    url: "/services/slider/GetBigSliderImages",
                    type: "post",
                    success: function (data) {
                        $(data).each(function (index) {

                            $(".sliderbg ul").append('<li style="position:absolute"><a><img src="' + data[index].image + '" class="slider-position"></a></li>');
                        });
                        slider();
                    }
                });
            }
            else {

                slidervar = true;
                $.ajax({
                    url: "/services/slider/GetBigSliderImages",
                    type: "post",
                    success: function (data) {
                        $(data).each(function (image) {
                            $(".sliderbg ul").append('<li><a><img src="' + image + '" class="slider-position"></a></li>');
                        });
                    }
                });
            }

            function slider() {
                $("#slider ul#resim li").hide();
                $("#slider ul#resim li:first").show();

                var SliderCount = 0;
                $.Slider = function (toplam) {
                    if (SliderCount < toplam - 1) {
                        SliderCount++;
                        $("#slider ul#resim li").eq(SliderCount - 1).stop(true, true)
                            .animate({
                                opacity: "toggle"
                            }, 1000);
                        $("#slider ul#resim li").eq(SliderCount).stop(true, true)
                            .animate({
                                opacity: "toggle"
                            }, 1000);
                    }
                    else {
                        $("#slider ul#resim li").eq(SliderCount).stop(true, true)
                            .animate({
                                opacity: "toggle"
                            }, 1000);
                        $("#slider ul#resim li:first").stop(true, true)
                            .animate({
                                opacity: "toggle"
                            }, 1000);
                        SliderCount = 0;
                    }
                }
                toplamLi = $("#slider ul#resim li").length;
                interval = setInterval('$.Slider(' + toplamLi + ')', 4000);
            }
            $("#slider").hover(function () {
                clearInterval(interval);
            }, function () {
                interval = setInterval('$.Slider(' + toplamLi + ')', 4000);
            });

        });



    </script>

    <script>
        var acc = document.getElementsByClassName("question");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].onclick = function () {
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            }
        }
