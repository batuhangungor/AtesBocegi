@model IEnumerable<Employee>
@{ViewData["title"] = "Kadromuz";}
@Html.Partial("_smallSlider")
@{
    var manager = Model.Where(q => q.Role == "Müdür").FirstOrDefault();
    var psychologist = Model.Where(q => q.Role == "Psikolog").FirstOrDefault();
    var teachers = Model.Where(q => q.Role == "Ogretmen").ToList();
    var staff = Model.Where(q => q.Role == "Personel").FirstOrDefault();
}
<div class="col xl-1-1 ">
    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box">
        <div class="col xl-1-2">

            <div class="article-box" style="height: 367px; background:@manager.Color.MainColor;">
                <div class="article-box article-box-title" style="height: 63px;  background: @manager.Color.SecondColor">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Kurum Müdürümüz</b></span>
                    </div>
                </div>
                <img style="margin:15px 20px; float:left" align="middle" src="@manager.Image" width="200" height="250">
                <div style="margin-top:15px; margin-right:20px; color:wheat; font-size:18px">
                    @manager.Name<br /><br />
                    <span style="font-size:12px;color:@manager.Color.TextColor">@Html.Raw(@manager.Info)</span>
                </div>
            </div>
        </div>
        <div class="col xl-1-2">

            <div class="article-box" style="height: 367px; background:@psychologist.Color.MainColor;">
                <div class="article-box article-box-title" style="height: 63px;  background: @psychologist.Color.SecondColor">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Kurum Psikoloğumuz</b></span>
                    </div>
                </div>
                <img style="margin:15px 20px; float:left" align="middle" src="@psychologist.Image" width="200" height="250">
                <div style="margin-top:15px; margin-right:20px; color:wheat; font-size:18px">
                    @psychologist.Name<br /><br />
                    <span style="font-size:12px;color:@psychologist.Color.TextColor">@Html.Raw(psychologist.Info)</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col xl-1-1 ">
    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box">
        <div class="col xl-2-3">
            <div class="article-box" style="height: 417px; width:640px; background:linear-gradient(rgb(107, 58, 168), rgb(106, 60, 164));">
                <div class="article-box article-box-title" style="height: 63px; background: rgb(137, 88, 200);">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Öğretmenlerimiz</b></span>
                    </div>
                </div>
                <div class="wrap xl-outside-8 xl-gutter-16 top_margin_15">
                    @foreach (var teacher in teachers)
                    {

                        <div class="col xl-1-3 teacher-box">
                            <div style="height: 310px; background: rgb(137, 88, 200);" class="article-box">
                                <img class="article-box-image" align="middle" src="@teacher.Image" width="158" height="150">
                                <div class="article-box-text">
                                    <span style="font-size:17px;color:#ffffff; display:inline-block; padding-bottom: 10px;">@teacher.Name</span>
                                    <br>
                                    <span style="font-size:12px;color:#fdda4c;">@Html.Raw(@teacher.Info)</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="col xl-1-3">
            <div class="article-box" style="height: 330px; width:310px; background:linear-gradient(rgb(238, 93, 0), rgb(237, 92, 2));">
                <div class="article-box article-box-title" style="height: 63px; background: rgb(249, 140, 2);">
                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Yardımcı Personel</b></span>
                    </div>
                </div>
                <img class="article-box-image" align="middle" src="@staff.Image">
                <div class="article-box-text">
                    <span style="font-size:17px;color:#ffffff; display:inline-block; padding-bottom: 10px;">@staff.Name</span>
                    <br>
                    <span style="font-size:12px;color:#fdda4c;">@Html.Raw(@staff.Info)</span>
                </div>
            </div>


            <div class="col xl-1-1 top_margin_15">
                <div class="article-box" style=" width:310px; background:rgb(213, 66, 11);">
                    <div class="article-box article-box-title" style="height: 60px; ">
                        <div class="employee-details-button" style="margin-top:10px;">
                            <span style="color:white; font-size:20px; margin-left:10px;"><b>Detaylar için</b></span>
                            <a asp-action="detail">
                                <img src="~/Site/img/detailbutton.png" style="float:right; margin-right:10px;" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
