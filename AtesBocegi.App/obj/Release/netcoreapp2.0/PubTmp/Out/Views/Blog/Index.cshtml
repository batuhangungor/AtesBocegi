@model IEnumerable<Blog>
@{
    ViewData["title"] = "PsikoBlog";
}
@Html.Partial("_smallSlider")

<div class="col xl-1-1 ">

    <div class="wrap xl-outside-40 xl-gutter-24 footer-article-box xl-table ">

        <div class="col xl-2-3">
            @foreach (var blog in Model)
            {
                <div class="article-box" style=" width:640px; height:200px; background:@blog.Color.MainColor; margin-bottom:10px">
                    <div class="wrap xl-outside-8 xl-gutter-16 ">
                        <div class="col xl-1-1">
                            <div>
                                <a asp-controller="blog" asp-action="details" asp-route-id="@blog.Id">
                                    <img class="blog-list-image" align="middle" src="@blog.SmallImage" style="float:left;" width="200" height="140">
                                </a>
                                <p style="font-size:20px;color:#ffffff; margin-left:15px;">
                                    <a class="link" asp-controller="blog" asp-action="details" asp-route-id="@blog.Id">@blog.Title</a>
                                </p>
                                <p style="text-align:left;">
                                    <span style="font-size:13px;color:@blog.Color.TextColor">
                                        @blog.Info
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>


        <div class="col xl-1-3">
            <div class="article-box" style="width:310px; background:rgb(12, 150, 177);">
                <div class="article-box article-box-title" style="height: 63px; background: rgb(11, 172, 203);">

                    <div class="article-title-text" style="margin-top:15px;">
                        <span><b>Sorunuz mu var?</b></span>
                    </div>
                </div>
                <div class="wrap xl-outside-4 top_margin_15">
                    <div class="col xl-1-3">
                    </div>
                    <div class="col xl-2-3">
                        <div class="article-box">
                            <img align="right" src="~/Site/img/quest_bg.png" style="margin-right:20px">
                        </div>
                    </div>


                    <div class="col xl-1-1">
                        <div class="article-box" style="margin-top:-153px">
                            <p style="font-family:'Arial';font-size:17px;color:#ffffff; margin-left:15px; margin-top: -15px">Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızı da iletebilirsiniz.</p>
                            <p style="font-family:'Arial';font-size:12px;color:#71e8ff; margin-left:15px;">Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz. Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz. Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz.</p>
                            <p style="font-family:'Arial';font-size:12px;color:#71e8ff; margin-left:15px;">Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz. Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz. Merak ettiğiniz ve bize sormak istediğiniz diğer sorularınızıda iletebilirsiniz.</p>
                        </div>
                        <div style="margin-bottom: 10px; margin-right:20px; float:right">
                            <a asp-action="index" asp-controller="contact"><img src="~/Site/img/detailbutton.png"></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
