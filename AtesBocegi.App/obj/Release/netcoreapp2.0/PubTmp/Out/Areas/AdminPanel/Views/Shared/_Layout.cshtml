<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/AdminPanel/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/AdminPanel/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/AdminPanel/dist/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Morris Charts CSS -->
    <link href="~/AdminPanel/vendor/morrisjs/morris.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/AdminPanel/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />       
    <!-- datatables -->
    <link rel="stylesheet" href="~/Datatables/jquery.dataTables.min.css" />
    <!-- JQuery -->
    <script src="~/AdminPanel/vendor/jquery/jquery.min.js"></script>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" href="index.html">Ateş Böceği Admin Panel</a>
            </div>
            <!-- /.navbar-header -->
            
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">

                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Home"><i class="fa fa-dashboard fa-fw"></i> Ana Sayfa</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Article"><i class="fa fa-user fa-fw"></i> İçerik Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="About"><i class="fa fa-info-circle fa-fw"></i> Hakkımızda Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Blog"><i class="fa fa-sitemap fa-fw"></i> Blog Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Employee"><i class="fa fa-user fa-fw"></i> Kadromuz Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Galery"><i class="fa fa-file-image-o fa-fw"></i> Galeri Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Slider"><i class="fa fa-sliders fa-fw"></i> Slider Yönetimi</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="FAQ"><i class="fa fa-question fa-fw"></i> SSS</a>
                        </li>
                        <li>
                            <a asp-action="index" asp-controller="Contact"><i class="fa fa-edit fa-fw"></i> İletişim Yönetimi</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewData["Title"]</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            @RenderBody()
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/AdminPanel/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/AdminPanel/vendor/metisMenu/metisMenu.min.js"></script>
    <script src="~/AdminPanel/dist/js/sb-admin-2.js"></script>
    <script src="~/AdminPanel/"></script>
    <script src="~/Datatables/jquery.dataTables.min.js"></script>

    <script src="~/JsExtensions/Custom.js"></script>
    @RenderSection("scripts", required: false)


</body>
</html>
