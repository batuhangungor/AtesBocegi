
@{
    ViewData["Title"] = "Albüm Oluştur";
}

<div class="row">
    <form asp-controller="Galery" asp-action="Create" method="post" enctype="multipart/form-data">

        <input asp-for="AlbumPhoto" class="form-control" type="hidden">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-sm-6">
            <div class="well">
                <h3 style="line-height:20%;"><i class="fa fa-user fa-1x" style="line-height:6%;color:#339966"></i> Albüm Ekle</h3>
                <hr />
                <div class="form-group">
                    <label>Albüm Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Albüm Adı">
                </div>

                <div class="form-group">
                    <label>renk</label>
                    <select asp-for="ColorId" class="form-control" asp-items="ViewBag.Colors"></select>
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input type="file" name="file" />
                </div>
            </div>
        </div>
        <button class="btn btn-primary btn-block">Ekle</button>
    </form>


</div>

